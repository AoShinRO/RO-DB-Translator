<Window x:Class="RODatabaseTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RODatabaseTranslator"
        xmlns:properties="clr-namespace:RODatabaseTranslator.Properties"     
        mc:Ignorable="d"
        Title="RODatabaseTranslator by AoShinHo" Height="240" Width="220" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox Name="InputFilePath" Margin="10,36,10,0" VerticalAlignment="Top" Text="Enter input file path" IsReadOnly="True" />
        <Button Name="StartButton" Content="Start Translation" Width="150" Height="30" VerticalAlignment="Top" Margin="0,151,0,0" HorizontalAlignment="Center" Click="StartButton_Click" />
        <ProgressBar Name="ProgressBar" Margin="10,124,10,0" Height="18" VerticalAlignment="Top" />
        <TextBlock Name="StatusText" Margin="10,200,10,0" VerticalAlignment="Top" TextWrapping="Wrap" />
        <Button x:Name="SelectInputFileButton" Content="Select Input File" Width="150" Height="30" VerticalAlignment="Top" Margin="0,61,0,0" HorizontalAlignment="Center" Click="SelectInputFileButton_Click" />
        <TextBox x:Name="DIVINEAPIKEY" Margin="10,10,10,0" VerticalAlignment="Top" Text="{Binding YOUR_API_KEY, Source={x:Static properties:Settings.Default}}" MouseDoubleClick="DIVINEAPIKEY_MouseDoubleClick" MouseDown="DIVINEAPIKEY_MouseDoubleClick" />
        <ComboBox x:Name="LangType" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBoxItem Content="pt-BR" IsSelected="True"/>
            <ComboBoxItem Content="en-US" />
        </ComboBox>
        <TextBox x:Name="ProgressText" Margin="10,147,10,0" Visibility="Hidden" TextWrapping="Wrap" Text="" Background="Transparent" VerticalAlignment="Top" VerticalContentAlignment="Center" IsHitTestVisible="False"/>
    </Grid>
</Window>
